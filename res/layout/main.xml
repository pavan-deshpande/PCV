<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.main.MainActivity" >

    <Button
        android:id="@+id/pcvButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:onClick="pcv"
        android:text="@+string/button_1" />

    <Button
        android:id="@+id/dataRateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/pcvButton"
        android:layout_marginTop="24dp"
        android:onClick="dataRate"
        android:text="@+string/button_2" />

    <EditText
        android:id="@+id/textDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/dataRateButton"
        android:layout_marginTop="16dp"
        android:ems="2" 
        android:text="@+string/distance">

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/enterDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:text="2"
        android:inputType="number" />

    <Button
        android:id="@+id/viewDBButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/enterDistance"
        android:layout_alignRight="@+id/enterDistance"
        android:layout_below="@+id/enterDistance"
        android:layout_marginTop="16dp"
        android:onClick="viewDB"
        android:text="@+string/view_db" />

    <Button
        android:id="@+id/clearDBButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/viewDBButton"
        android:layout_alignRight="@+id/viewDBButton"
        android:layout_below="@+id/viewDBButton"
        android:layout_marginTop="29dp"
        android:onClick="clearDB"
        android:text="@+string/clear_db" />

</RelativeLayout>
